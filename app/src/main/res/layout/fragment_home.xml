<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:gravity="end">

                        <TextView
                            android:id="@+id/intervall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginRight="8dp"
                            android:text="HEUTE"
                            android:textSize="15sp" />


                    </TableRow>

                    <TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start">

                            <TextView
                                android:id="@+id/current_price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="-10dp"
                                android:layout_marginEnd="8dp"
                                android:text="1.035,56"
                                android:textSize="30sp" />

                            <TextView
                                android:id="@+id/current_currency"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="-10dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:gravity="bottom"
                                android:text="â‚¬"
                                android:textSize="20sp" />

                        </TableRow>


                        <TableRow
                            android:gravity="left">

                            <TextView
                                android:id="@+id/test"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="0dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="8dp"
                                android:gravity="bottom"
                                android:text="+20%"
                                android:textSize="20sp" />



                        </TableRow>
                    </TableRow>

                </TableLayout>

            </LinearLayout>


            <com.yabu.livechart.view.LiveChart
                android:id="@+id/live_chart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center_horizontal"

                app:baselineColor="@color/design_default_color_primary_variant"
                app:baselineDashGap="8dp"
                app:baselineStrokeWidth="4dp"
                app:boundsColor="@color/design_default_color_primary_variant"
                app:labelTextColor="@color/colorCyan"
                app:labelTextHeight="14sp"
                app:mainCornerRadius="4dp"
                app:overlayCircleColor="@color/design_default_color_primary_variant"
                app:overlayCircleDiameter="8dp"
                app:overlayLineColor="@color/design_default_color_primary_variant"
                app:pathColor="@color/colorCyan"
                app:pathStrokeWidth="4dp"
                app:secondCornerRadius="4dp"
                app:secondPathColor="@color/colorCyan"
                tools:ignore="MissingClass" />

            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_heute" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_woche" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_monat" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_jahr" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_max" />
            </com.google.android.material.tabs.TabLayout>

            <TextView
                    android:id="@+id/text_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:text="efswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedfefswejf\nserfoiaef\nezrfasefgiedf"
                    android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>


</FrameLayout>